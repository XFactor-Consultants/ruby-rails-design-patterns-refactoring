<h1>New wiki post</h1>

<%= form_with model: @wiki_post, local: true do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :author %><br>
    <%= form.text_field :author %>
  </div>

  <div class="field">
    <%= form.label :image %><br>
    <%= form.file_field :image %>
  </div>

  <!-- Add hidden checkbox here -->
  <div class="field">
    <%= form.label :hidden, 'Hidden?' %><br>
    <%= form.check_box :hidden %>
  </div>

  <div>
    <%= form.submit "Create" %>
  </div>
<% end %>

<br>

<div>
  <%= render 'wiki_posts/back_to_wikiposts' %>
</div>

